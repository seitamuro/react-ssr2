{
  "compilerOptions": {
    "esModuleInterop": true,
    "exactOptionalPropertyTypes": false,
    "jsx": "react-jsx",
    "lib": ["ESNext", "DOM", "DOM.Iterable", "WebWorker"],
    "module": "ESNext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ESNext",
    "types": ["node"]
  },
  "exclude": ["**/dist", "**/node_modules"],
  "include": ["workspaces"],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "transpileOnly": true
  }
}
